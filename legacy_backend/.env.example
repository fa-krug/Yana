# Django settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1
# BASE_URL=https://aggregato.da-krug.de  # Optional: Base URL for generating absolute URLs (e.g., for YouTube proxy embeds). If not set, will be constructed from ALLOWED_HOSTS.

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Localization
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# Aggregation
AGGREGATION_SCHEDULE=*/30 * * * *
AGGREGATION_WORKERS=4

# Django-Q2 cluster settings
Q_CLUSTER_WORKERS=2
Q_CLUSTER_TIMEOUT=720
Q_CLUSTER_RETRY=780

# Reddit API (required for Reddit aggregation)
# Get credentials at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=Aggregato/1.0

# AI Integration (Optional)
# Get API key from https://platform.openai.com/api-keys
# Or use any OpenAI-compatible API (e.g., Ollama, LM Studio)
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-api-key-here

# AI Model Configuration
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000

# Rate Limiting (per user)
AI_DEFAULT_DAILY_LIMIT=200
AI_DEFAULT_MONTHLY_LIMIT=2000

# Validation & Timeouts
AI_MAX_PROMPT_LENGTH=500
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2
