# Django Settings for Yana
# This file documents all available settings with their defaults.
# Copy values to .env to override defaults.
# Settings not in .env will use the default values below.

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# SECRET_KEY - Django secret key for sessions and tokens
# DEFAULT: django-insecure-l4x)1=)q58u$0#n^r1pgnt29y)-k%z2y(0h0tud&3)4533!ikb
# PRODUCTION: Generate a new one with:
#   python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# SECRET_KEY=your-secret-key-here

# ============================================================================
# DEBUG MODE
# ============================================================================

# DEBUG - Enable/disable debug mode
# DEFAULT: True
# PRODUCTION: False
# DEBUG=False

# ============================================================================
# ALLOWED HOSTS
# ============================================================================

# ALLOWED_HOSTS - Comma-separated list of allowed hostnames (or * for all)
# DEFAULT: localhost,127.0.0.1
# EXAMPLES:
#   *                                      # Allow all hosts (development only)
#   localhost,127.0.0.1                    # Local only
#   0.0.0.0,localhost,127.0.0.1            # All network interfaces
#   example.com,www.example.com            # Production domains
#   192.168.178.26,localhost,127.0.0.1     # Specific IP + localhost
# ALLOWED_HOSTS=*

# ============================================================================
# NETWORK
# ============================================================================

# BASE_URL - Full public URL of the application (required for YouTube proxy)
# DEFAULT: http://localhost:8000
# BASE_URL=http://localhost:8000

# ============================================================================
# DATABASE
# ============================================================================

# DATABASE_ENGINE - Database backend
# DEFAULT: django.db.backends.sqlite3
# OPTIONS:
#   django.db.backends.sqlite3      # SQLite (default)
#   django.db.backends.postgresql   # PostgreSQL
#   django.db.backends.mysql        # MySQL
# DATABASE_ENGINE=django.db.backends.sqlite3

# ============================================================================
# INTERNATIONALIZATION
# ============================================================================

# TIME_ZONE - Timezone for the application
# DEFAULT: UTC
# EXAMPLES:
#   UTC                             # Coordinated Universal Time
#   America/New_York                # Eastern Time
#   Europe/London                   # London Time
#   Europe/Berlin                   # Central European Time
#   Australia/Sydney                # Sydney Time
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# TIME_ZONE=UTC

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# EMAIL_BACKEND - Email backend to use
# DEFAULT: django.core.mail.backends.console.EmailBackend (prints to console)
# OPTIONS:
#   django.core.mail.backends.console.EmailBackend    # Development (console output)
#   django.core.mail.backends.smtp.EmailBackend       # Production (SMTP server)
#   django.core.mail.backends.filebased.EmailBackend  # Testing (save to file)
#   django.core.mail.backends.dummy.EmailBackend      # Testing (discard emails)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# EMAIL_HOST - SMTP server hostname
# DEFAULT: (empty)
# EXAMPLES:
#   smtp.gmail.com                  # Gmail
#   smtp-mail.outlook.com           # Outlook
#   smtp.strato.de                  # STRATO
#   smtp.office365.com              # Office 365
#   localhost                       # Local mail server
# EMAIL_HOST=smtp.strato.de

# EMAIL_PORT - SMTP server port
# DEFAULT: 587
# COMMON PORTS:
#   587                             # TLS (recommended)
#   465                             # SSL
#   25                              # Non-encrypted (not recommended)
# EMAIL_PORT=587

# EMAIL_USE_TLS - Use TLS encryption (STARTTLS)
# DEFAULT: True
# NOTES:
#   - Use True for port 587
#   - Use False for port 465 (use EMAIL_USE_SSL instead)
# EMAIL_USE_TLS=True

# EMAIL_USE_SSL - Use SSL encryption
# DEFAULT: False
# NOTES:
#   - Use True for port 465
#   - Use False for port 587 (use EMAIL_USE_TLS instead)
# EMAIL_USE_SSL=False

# EMAIL_HOST_USER - SMTP authentication username
# DEFAULT: (empty)
# NOTES:
#   - Usually your full email address
#   - For STRATO: your full email address
# EMAIL_HOST_USER=your-email@yourdomain.com

# EMAIL_HOST_PASSWORD - SMTP authentication password
# DEFAULT: (empty)
# NOTES:
#   - Your email account password
#   - For Gmail: use App Password if 2FA is enabled
#   - Keep this secure! Never commit to version control
# EMAIL_HOST_PASSWORD=your-email-password

# DEFAULT_FROM_EMAIL - Default sender email address
# DEFAULT: noreply@localhost
# NOTES:
#   - Used as the "From" address for all emails
#   - Should match your EMAIL_HOST_USER for most providers
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SERVER_EMAIL - Email address for server error notifications
# DEFAULT: server@localhost
# NOTES:
#   - Used as the "From" address for error emails
#   - Should match your EMAIL_HOST_USER for most providers
# SERVER_EMAIL=server@yourdomain.com

# ADMIN_EMAIL - Comma-separated list of admin email addresses
# DEFAULT: (empty)
# NOTES:
#   - Receives error notifications and system alerts
#   - Format: "email@example.com" or "Name <email@example.com>"
#   - Multiple admins: "admin1@example.com, Admin Two <admin2@example.com>"
#   - Leave empty to disable error email notifications
# EXAMPLES:
#   ADMIN_EMAIL=admin@yourdomain.com
#   ADMIN_EMAIL=Admin <admin@yourdomain.com>
#   ADMIN_EMAIL=admin1@yourdomain.com, Admin Two <admin2@yourdomain.com>
# ADMIN_EMAIL=

# ============================================================================
# STRATO EMAIL CONFIGURATION EXAMPLE
# ============================================================================
# For STRATO email accounts, use the following configuration:
#
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.strato.de
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# EMAIL_HOST_USER=your-email@yourdomain.com
# EMAIL_HOST_PASSWORD=your-strato-password
# DEFAULT_FROM_EMAIL=your-email@yourdomain.com
# SERVER_EMAIL=your-email@yourdomain.com
# ADMIN_EMAIL=admin@yourdomain.com
# ============================================================================
